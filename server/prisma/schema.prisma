generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Superhero {
  id                String @id @default(nanoid(32))
  nickname          String
  realName          String
  originDescription String
  catchPhrase       String

  superpowers Superpower[]
  images      Image[]

  @@map("superheros")
}

model Superpower {
  id        String    @id @default(nanoid(48))
  name      String
  superhero Superhero @relation(fields: [heroId], references: [id], onDelete: Cascade)
  heroId    String

  @@map("superpowers")
}

model Image {
  id        String    @id @default(nanoid(48))
  url       String
  superhero Superhero @relation(fields: [heroId], references: [id], onDelete: Cascade)
  heroId    String

  @@map("images")
}
